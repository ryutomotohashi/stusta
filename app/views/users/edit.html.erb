<div class = "container py-5">
  <%= render "layouts/error", obj: @user %>
  <div class = "row d-flex justify-content-center">
    <div class = "col-5">
      <h3>情報編集</h3>
        <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
          <div class = "mb-3">
            <%= f.label :profile_image, "プロフィール画像", class: "form-label" %><br />
            <%= f.file_field :profile_image, class: "form-control text-center"%>
          </div>
          <div class = "mb-3">
            <%= f.label :name, "名前", class: "form-label"%><br />
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class = "mb-3">
            <%= f.label :introduction, "説明",class: "form-label"%><br />
            <%= f.text_field :introduction, class: "form-control" %>
          </div>
          <div class = "mb-3">
            <%= f.submit "変更する" , class: "btn btn-warning"%>
            <%= link_to :back do %>
              <button type = "button" class = "btn btn-secondary">戻る</button>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>