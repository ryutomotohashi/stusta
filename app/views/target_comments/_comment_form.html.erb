<div>
  <%= form_with(model: [target, comment], local: false) do |f| %>
    <div class = "mb-3">
      <%= f.text_area :comment, rows: '5', placeholder: "コメントしてあげましょう", class: "form-control" %>
    </div>
    <div class = "mb-3">
      <%= f.submit "送信する", class: "btn btn-secondary btn-sm"%>
    </div>
  <% end %>
</div>