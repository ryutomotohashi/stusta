<% target.target_comments.each do |comment| %>
  <div class = "row border-bottom mb-2">
    <div class = "col-3 text-center mb-2">
      <%= link_to user_path(comment.user) do %>
        <%= image_tag comment.user.get_icon, size: "50x50", class: "mt-3 rounded-circle" %><br />
        <%= comment.user.name %><br />
      <% end %>
      <%= comment.created_at.strftime("%Y年%m月%d日") %>
    </div>
    <div class = "col-7 border rounded mb-2">
      <%= comment.comment %>
    </div>
    <div class = "col-2 align-self-end mb-2">
      <% if comment.user == current_user %>
        <%= link_to target_target_comment_path(comment.target, comment), method: :delete, remote: true do %>
          <button type = "button" class = "btn btn-danger btn-sm">削除</button>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>