<% if current_user.following?(user)%>
  <%= link_to user_relationships_path(user.id), method: :delete do %>
    <button type="button" class="btn btn-outline-warning btn-sm">フォロー解除</button>
  <% end %>
<% else %>
  <%= link_to user_relationships_path(user.id), method: :post do %>
    <button type="button" class="btn btn-warning btn-sm">フォロー</button>
  <% end %>
<% end %>