<div class = "container py-5">
  <% if @users.exists? %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col"><!--Userの写真--></th>
            <th scope="col">Name</th><!--Userの名前-->
            <th scope="col">Follows</th><!--Userのフォロー数-->
            <th scope="col">Followers</th><!--Userのフォロワー数-->
            <th scope="col"><!--フォローするボタン--></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= image_tag user.get_icon, size: "50x50", class: "mt-3 rounded-circle" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= user.followings.count %></td>
              <td><%= user.followers.count %></td>
              <td><%= render "relationships/btn" , user: user %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
  <% else %>
    <h3 class = "text-bold text-center">No List</h3>
  <% end %>
</div>